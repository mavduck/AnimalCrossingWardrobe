<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AnimalCrossingWardrobe</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body class="h-100">
    <div class="d-flex flex-column h-100">
        <header class="flex-shrink-1">
            <nav class="navbar mb-3 navbar-pink">
                <div class="container d-flex justify-content-start">
                    <i class="bi bi-heart-fill icon-pink"></i>
                    <a class="navbar-brand text-white" asp-page="/Index">Animal Crossing Wardrobe</a>
                </div>
            </nav>
        </header>
        <main role="main" class="flex-grow-1 pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>